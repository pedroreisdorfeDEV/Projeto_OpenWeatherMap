@* @model projetoGloboClima.Models.Entities.UserEntity *@
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - projetoGloboClima</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/projetoGloboClima.styles.css" asp-append-version="true" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">projetoGloboClima</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Página Inicial</a>
                        </li>

                        @{
                            var userName = Context.Session.GetString("UserName");
                            var token = Context.Session.GetString("Token");
                        }

                        @if (!string.IsNullOrEmpty(userName))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark linkColor" asp-area="" asp-controller="Home" asp-action="Index">
                                    Olá, @userName
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark linkColor" asp-area="" asp-controller="Weather" asp-action="IndexWeather">
                                    Globo Clima
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Login">Login</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - projetoGloboClima - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!-- POPUP PADRÃO -->
    <div class="modal fade" id="popupPadrao" tabindex="-1" aria-labelledby="popupPadraoLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content rounded-3 shadow">
                <div class="modal-header">
                    <h5 class="modal-title" id="popupPadraoLabel">Atenção</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
                </div>
                <div class="modal-body" id="popupMensagem">
                    <!-- Mensagem será injetada dinamicamente -->
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Entendido</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        function mostrarPopup(mensagem) {
            document.getElementById("popupMensagem").innerText = mensagem;
            var modal = new bootstrap.Modal(document.getElementById("popupPadrao"));
            modal.show();
        }

        // Se a controller enviar mensagem via ViewBag, abre o popup
        $(document).ready(function () {
            var mensagem = @Html.Raw(System.Text.Json.JsonSerializer.Serialize((string)ViewBag.PopupMensagem));
            if (mensagem && mensagem.length > 0) {
                mostrarPopup(mensagem);
            }
        });
    </script>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
