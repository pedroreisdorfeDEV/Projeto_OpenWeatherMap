@model projetoGloboClima.Models.ViewModels.UserViewModel

@{
    ViewData["Title"] = "Cadastro";
}

<link rel="stylesheet" href="~/css/login/login.css" />

<div class="d-flex justify-content-center align-items-center vh-100 bg-light">
    <div class="card shadow-lg p-4 rounded-4" style="width: 450px;">
        <div class="text-center mb-4">
            <h2 class="fw-bold text-success">Crie sua conta</h2>
            <p class="text-muted">Preencha os campos abaixo para se cadastrar</p>
        </div>

        <form method="post" asp-controller="User" asp-action="Register">
            <div class="mb-3">
                <label asp-for="User" class="form-label fw-semibold">Usuário</label>
                <input asp-for="User" class="form-control" placeholder="Escolha um nome de usuário" required />
                <span asp-validation-for="User" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Name" class="form-label fw-semibold">Nome completo</label>
                <input asp-for="Name" class="form-control" placeholder="Digite seu nome completo" required />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label fw-semibold">Email</label>
                <input asp-for="Email" class="form-control" type="email" placeholder="exemplo@empresa.com" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label fw-semibold">Senha</label>
                <input asp-for="Password" class="form-control" type="password" placeholder="Digite sua senha" required />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-success w-100 fw-semibold">Cadastrar</button>

            <div class="text-center mt-3">
                <a asp-controller="User" asp-action="Login" class="text-decoration-none">Já tem conta? Faça login</a>
            </div>
        </form>
    </div>
</div>
