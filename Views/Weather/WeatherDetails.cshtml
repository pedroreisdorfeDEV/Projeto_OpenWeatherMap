@model projetoGloboClima.Models.ViewModels.WeatherViewModel

@{
    ViewData["Title"] = "Clima Atual";
}

<div class="container mt-4">
    <h2>Clima em @Model.Cidade - @Model.Pais</h2>
    <hr />

    <div class="card p-3 shadow-sm">
        <p><strong>Temperatura:</strong> @Model.Temperatura °C</p>
        <p><strong>Sensação Térmica:</strong> @Model.SensacaoTermica °C</p>
        <p><strong>Temperatura Mínima:</strong> @Model.TempMin °C</p>
        <p><strong>Temperatura Máxima:</strong> @Model.TempMax °C</p>
        <p><strong>Umidade:</strong> @Model.Umidade %</p>
        <p><strong>Condição:</strong> @Model.Condicao</p>
        <p><strong>Vento:</strong> @Model.VelocidadeVento m/s</p>
        <p><strong>Nebulosidade:</strong> @Model.Nebulosidade %</p>
    </div>

    <br />
    <div class="buttons_back_addafav">   
        <form asp-controller="User" asp-action="Favorite" method="post">
            <input type="hidden" name="Cidade" value="@Model.Cidade" />
            <input type="hidden" name="Pais" value="@Model.Pais" />
            <input type="hidden" name="Temperatura" value="@Model.Temperatura" />
            <input type="hidden" name="SensacaoTermica" value="@Model.SensacaoTermica" />
            <input type="hidden" name="TempMin" value="@Model.TempMin" />
            <input type="hidden" name="TempMax" value="@Model.TempMax" />
            <input type="hidden" name="Umidade" value="@Model.Umidade" />
            <input type="hidden" name="Condicao" value="@Model.Condicao" />
            <input type="hidden" name="VelocidadeVento" value="@Model.VelocidadeVento" />
            <input type="hidden" name="Nebulosidade" value="@Model.Nebulosidade" />

            <button type="submit" class="btn btn-warning" value="Favorite">
                <i class="fa fa-star"></i> Favoritar
            </button>
        </form>

        <a asp-controller="Weather" asp-action="IndexWeather" class="btn btn-secondary">Voltar</a>
    </div>
    
</div>


